@namespace PicPay.Web.Layout

<MudContainer MaxWidth="MaxWidth.Large">
    <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center">
        <MudText Typo="Typo.h4" Class="my-12">
            <strong>Com PicPay, a experiência é outra</strong>
        </MudText>
    </MudStack>
    <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center">
            <MudButton
                Class="px-8 mb-3"
                StartIcon="@Icons.Material.Filled.Assignment"
                IconSize="Size.Large"
                Variant="Variant.Filled"
                Style="width: 250px; height: 60px;"
                Color="Color.Primary"
                Href="/register"
            >
                <MudText Typo="Typo.h6">
                    Abrir conta
                </MudText>
            </MudButton>
            <MudButton
                Class="px-8"
                StartIcon="@Icons.Material.Filled.Login"
                IconSize="Size.Large"
                Variant="Variant.Filled"
                Style="width: 250px; height: 60px;"
                Color="Color.Primary"
                Href="/login"
            >
                <MudText Typo="Typo.h6">
                    Entrar
                </MudText>
            </MudButton>
    </MudStack>
</MudContainer>
